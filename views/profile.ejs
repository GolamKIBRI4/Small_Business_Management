<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .profile-section {
      display: flex;
      gap: 40px;
     

    }

    .left-column {
      width: 60%;
    }

    .right-column {
      width: 40%;
      position: relative;
  background-color: rgb(250, 247, 222);
      padding: 2%;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      opacity: 1.0;
    }

    #updateForm {
      display: none;
      margin-top: 20px;
    }

    .orders-container {
      margin-top: 30px;
      padding: 20px;
      background-color: palegoldenrod;
      
      border-radius: 10px;
    }
    .formdiv {
     padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color:  palegoldenrod;
      display: none; /* Initially hidden */
      margin-top: 8px;
      
    }
    .profilediv {
      padding: 20px;
      background-color: palegoldenrod;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

  </style>
</head>
<body>
  <!-- Main Container -->
  <div style="background-color:smoke ;
      
      border-radius: 2px;
      height: 100vh;">
      <!-- Navbar -->
      <div class="navbar " style="display: flex; background-color: rgb(31, 30, 30); height: fit-content; display: flex;justify-content: flex-end;">

       <div class="mt-4"; style="margin-right: 10px; display: flex;align-items: center; margin-bottom: 15px;">
          <a href="/logout" class="btn btn-danger" style="color: black;">Logout</a>
       </div>

      </div>

    <div class="profile-section" style="padding-top: 30px; padding-left: 100px; padding-right: 100px;">
      <!-- ðŸ‘ˆ Left Side -->
      <div class="left-column">
        
          <div class="profilediv " style="margin-top: 20px; margin-right: 665px;">
            <% if (user.photo) { %>
              <img src="/uploads/<%= user.photo %>" style="width: 300px; height: 200px; border-radius: 5px;" alt="Profile Photo">
            <% } else { %>
              <img src="https://via.placeholder.com/300x200?text=No+Photo" style="width: 300px; height: 200px; border-radius: 5px;" alt="No Photo">
            <% } %>
            <div class="orders-container mt-4" >
              <h5>Username: <%= user.username || 'Not provided' %></h5>
              <h5>Phone: <%= user.phone || 'Not provided' %></h5>
              <h5>Route: <%= user.route || 'Not provided' %></h5>
            </div>
          </div>
        

        


        <!-- ðŸ”» Orders Container -->
        <div class="orders-container mt-4">
          <h5>ðŸ§¾ User Orders</h5>
          <p>This is where order cards will go</p>
        </div>
                
      </div>

      <!-- ðŸ‘‰ Right Side -->
      <div class="right-column">
        <button class="btn " style=" background-color: rgb(109, 143, 50) ;color: black; " onclick="toggleForm()">Update Profile Info</button>

        <div class="formdiv">
          <form id="updateForm" action="/update-profile" method="POST" enctype="multipart/form-data" class="mt-3" >
            <div class="mb-3">
              <label for="phone">Phone Number</label>
              <input type="text" name="phone" class="form-control" pattern="01[0-9]{9}" maxlength="11" minlength="11"
                title="Must be 11 digits and start with 01" value="<%= user.phone || '' %>">
            </div>
            <div class="mb-3">
              <label for="route">Route</label>
              <input type="text" name="route" class="form-control" value="<%= user.route || '' %>">
            </div>
            <div class="mb-3">
              <label for="photo">Upload New Photo</label>
              <input type="file" name="photo" class="form-control">
            </div>
            <button type="submit" class="btn btn-success" style="background-color: rgb(109, 143, 50); color: black;">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleForm() {
      const formdiv = document.querySelector('.formdiv');
      formdiv.style.display = formdiv.style.display === 'none' ? 'block' : 'none';
      const updateForm = document.getElementById('updateForm');
      updateForm.style.display = updateForm.style.display === 'none' ? 'block' : 'none';
    }
  </script>
</body>
</html>
