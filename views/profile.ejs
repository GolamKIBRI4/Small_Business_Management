<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Profile</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

  <style>
    body {
      background-color: #0e0e0e;
      font-family: 'Poppins', sans-serif;
      color: white;
    }

    .navbar {
      background-color: #1a1a1a;
      padding: 15px 30px;
      display: flex;
      justify-content: flex-end;
    }

    .btn-danger {
      background-color: #ff4f5a;
      font-weight: 600;
      border: none;
    }

    .profile-card, .orders-container, .formdiv {
      background-color: #1a1a1a;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 0 12px #7b4ef6;
      margin-bottom: 30px;
    }

    .profile-card img {
      width: 100%;
      height: auto;
      max-height: 300px;
      object-fit: cover;
      border-radius: 8px;
    }

    .btn-update {
      background-color: #7b4ef6;
      color: black;
      font-weight: 600;
      width: 100%;
      margin-bottom: 20px;
    }

    .formdiv {
      display: none;
    }

    .form-control {
      background-color: #2c2c2c;
      color: white;
      border: 1px solid #444;
    }

    .form-control:focus {
      box-shadow: none;
      border-color: #7b4ef6;
    }

    .btn-success {
      background-color: #7b4ef6;
      color: black;
      border: none;
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .profile-section {
        flex-direction: column;
      }

      .btn-update {
        margin-top: 20px;
      }
    }
  </style>
</head>

<body>

  <!-- 🔝 Navbar -->
  <div class="navbar">
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>

  <!-- 👤 Profile Section -->
  <div class="container py-5">
    <div class="row g-5 align-items-start">

      <!-- 👈 Left Column -->
      <div class="col-lg-7">
        <div class="profile-card">
          <% if (user.photo) { %>
            <img src="/uploads/<%= user.photo %>" alt="Profile Photo" class="img-fluid" />
          <% } else { %>
            <img src="https://via.placeholder.com/300x200?text=No+Photo" alt="No Photo" class="img-fluid" />
          <% } %>

          <h5 class="mt-3">Username: <%= user.username || 'Not provided' %></h5>
          <h5>Phone: <%= user.phone || 'Not provided' %></h5>
          <h5>Route: <%= user.route || 'Not provided' %></h5>
        </div>

        <div class="orders-container">
          <h5>🧾 User Orders</h5>
          <p>This is where order cards will go.</p>
        </div>
      </div>

      <!-- 👉 Right Column -->
      <div class="col-lg-5">
        <button class="btn btn-update" onclick="toggleForm()">Update Profile Info</button>

        <div class="formdiv">
          <form id="updateForm" action="/update-profile" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="username">username</label>
              <input type="text" name="username" class="form-control" value="<%= user.username || '' %>" />
            </div>
            <div class="mb-3">
              <label for="phone">Phone Number</label>
              <input type="text" name="phone" class="form-control"
                pattern="01[0-9]{9}" maxlength="11" minlength="11"
                title="Must be 11 digits and start with 01"
                value="<%= user.phone || '' %>" />
            </div>
            <div class="mb-3">
              <label for="route">Route</label>
              <input type="text" name="route" class="form-control" value="<%= user.route || '' %>" />
            </div>
            <div class="mb-3">
              <label for="photo">Upload New Photo</label>
              <input type="file" name="photo" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Save Changes</button>
          </form>
        </div>
      </div>

    </div>
  </div>

  <!-- JavaScript -->
  <script>
    function toggleForm() {
      const formdiv = document.querySelector('.formdiv');
      formdiv.style.display = formdiv.style.display === 'none' ? 'block' : 'none';
    }
  </script>

</body>
</html>
